@page
@model demlandscheduling.Pages.Courses.IndexModel

<h1>Course List</h1>

@if (Model.Courses != null && Model.Courses.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Course Name</th>
                <th>Instructor</th>
                <th>Duration (hours)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model.Courses)
            {
                <tr>
                    <td>@course.Instructor</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No courses found.</p>
}

